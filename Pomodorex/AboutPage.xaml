<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pomodorex.AboutPage">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="dotnet_bot.png"
                   SemanticProperties.Description="The dot net bot waving hello!"
                   HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="Pomodorex" VerticalOptions="End" />
            <Label FontSize="22" Text="v1.0" VerticalOptions="End" />
        </HorizontalStackLayout>

        <Label Text="Pomodorex to Pomodoro timer, który pomoże zwiększyć efektywność w codziennych czynnościach. Jeśli chcesz dowiedzieć się, czym jest Technika Pomodoro, kliknij poniższy przycisk." />
        <Button WidthRequest="200" Text="Dowiedz się więcej..." Clicked="LearnMore_Clicked" />
    </VerticalStackLayout>
</ContentPage>